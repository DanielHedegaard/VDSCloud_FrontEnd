<MudGrid>
    <MudItem xs="12">
        <MudContainer MaxWidth="MaxWidth.Small">
            <MudImage src="../img/vdscloudlogo.png" Class="vdscloudlogo"/>
            <MudForm>
                <MudTextField Label="Username" @bind-Value="Session.User.UserName" Variant="Variant.Filled" T="string"></MudTextField>
                <br />
                <MudTextField T="string" @bind-Value="Session.User.Password" Label="Password" Variant="Variant.Filled" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="PassHideBtn" AdornmentAriaLabel="Show Password"/>
                <br />
                <MudTextField T="string" @bind-Value="PasswordReenter" Label="Re-enter Password" Variant="Variant.Filled" InputType="@reEnterPassInp" Adornment="Adornment.End" AdornmentIcon="@reEnterPassInputIcon" OnAdornmentClick="ReEnterPassHideBtn" AdornmentAriaLabel="Show Password"/>
                <br /> <br />
                <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="CreateAcount" Disabled="CreateBtnDisabled">@CreateText</MudButton>
            </MudForm>
        </MudContainer>
        <br />
    </MudItem>
</MudGrid>

<style>
    .vdscloudlogo {
        max-height: 70%;
        max-width: 60%;
        text-align: center;
    }
</style>