<MudGrid>
    <MudItem xs="12">
        <MudContainer MaxWidth="MaxWidth.Small">
            <MudImage src="../img/vdscloudlogo.png" Class="vdscloudlogo" />
            <MudTextField T="string" Label="Username" @bind-Value="UserSession.User.UserName" Variant="Variant.Filled"></MudTextField>
            <br />
            <MudTextField T="string" Label="Password" @bind-Value="UserSession.User.Password" Variant="Variant.Filled" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="PassHideBtn" AdornmentAriaLabel="Show Password" />
            <br />
            <MudButton Variant="Variant.Filled" Color="Color.Success" Class="px-5" ButtonType="ButtonType.Submit" OnClick="LoginClickedCallback" Disabled="ButtonDisabled">Login</MudButton>
        </MudContainer>
    </MudItem>
</MudGrid>

<style>
    .vdscloudlogo {
        max-height: 70%;
        max-width: 60%;
        text-align: center;
    }
</style>