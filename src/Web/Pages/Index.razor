@using Web.Components
@using Web.Components.LoginComponents

@page "/"

<PageTitle>Home</PageTitle>

@if (!IsUserLoggedIn)
{
    <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="text-center backgroundcolor">
        @if (CreateUserbool)
        {
            <CreateuserComponent/>
            <br/>
            <MudText Color="Color.Info">Already have an account? <MudLink Color="Color.Info" Underline="Underline.Always" OnClick="InvertCreateUserState">Sign in</MudLink></MudText>
        }
        else
        {
            <LoginComponent/>
            <br />
            <MudText Color="Color.Info">Don't have an account? <MudLink Color="Color.Info" Underline="Underline.Always" OnClick="InvertCreateUserState">Sign up</MudLink></MudText>
        }
    </MudContainer>
}
else
{
    <Navbar />
    <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="text-center backgroundcolor">
        <HomeComponent />
    </MudContainer>
}

<style>
    .backgroundcolor {
        background-color: #6464d0;
    }
</style>