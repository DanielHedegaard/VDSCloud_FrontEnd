@using Web.Components
@using Web.Components.LoginComponents
@using Web.Utilities
@inject SessionStorageAccessor SessionStorageAccessor
@page "/"

@if (!LoggedIn)
{
    <PageTitle>Login</PageTitle>

    <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="text-center backgroundcolor">
        @if (CreateUserbool)
        {
        <CreateuserComponent SignInClickedCallback="HandleSignInClicked"></CreateuserComponent>
        }
        else
        {
        <LoginComponent CreateUserClickedCallback="HandleCreateUserClicked" LoginCallback="HandleLoginCallback"></LoginComponent>
        }
    </MudContainer>
}
else
{
    <PageTitle>Home</PageTitle>

    <Navbar LogoutCallback="HandleLogoutCallback"></Navbar>

    <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="text-center backgroundcolor">
        <HomeComponent></HomeComponent>
    </MudContainer>
}

<style>
    .backgroundcolor {
        background-color: #6464d0;
    }
</style>